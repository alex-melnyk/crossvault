<?xml version="1.0" encoding="utf-8"?>
<!--
  Data extraction rules for Android 12+ (API 31+).
  
  This file is required for Android 12 and above to configure cloud backup
  and device-to-device transfer.
  
  Learn more: https://developer.android.com/about/versions/12/backup-restore
-->
<data-extraction-rules>
    <!-- 
      Cloud backup configuration.
      Same rules as backup_rules.xml but for Android 12+.
    -->
    <cloud-backup>
        <!-- Include Crossvault encrypted data -->
        <include domain="sharedpref" path="crossvault_secure_storage.xml"/>
        
        <!-- Exclude master key (will be regenerated) -->
        <exclude domain="sharedpref" path="_androidx_security_master_key_"/>
        
        <!-- Exclude cache -->
        <exclude domain="file" path="cache/"/>
        <exclude domain="file" path="code_cache/"/>
    </cloud-backup>
    
    <!-- 
      Device-to-device transfer configuration.
      Used when transferring data directly between devices.
    -->
    <device-transfer>
        <!-- Include Crossvault encrypted data -->
        <include domain="sharedpref" path="crossvault_secure_storage.xml"/>
        
        <!-- Exclude master key (will be regenerated) -->
        <exclude domain="sharedpref" path="_androidx_security_master_key_"/>
        
        <!-- Exclude cache -->
        <exclude domain="file" path="cache/"/>
        <exclude domain="file" path="code_cache/"/>
    </device-transfer>
</data-extraction-rules>
